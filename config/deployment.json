{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "registryName": {
                "username": "HenkBoelman",
                "password": "=QHOeQd4SW0V0lsYG4ZHTmdfi2NtIHXc",
                "address": "henkboelman.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0.8",
              "createOptions": ""
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0.8",
              "createOptions": ""
            },
            "env": {
              "OptimizeForPerformance": {
                "value": "false"
              }
            }
          }
        },
        "modules": {
          "camera-capture": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "VIDEO_PATH": {
                "value": "0"
              },
              "IMAGE_PROCESSING_ENDPOINT": {
                "value": "http://image-classifier-service:80/image"
              },
              "RESIZE_WIDTH": {
                "value": "256"
              },
              "RESIZE_HEIGHT": {
                "value": "256"
              },
              "SHOW_VIDEO": {
                "value": "True"
              }
            },
            "settings": {
              "image": "henkboelman.azurecr.io/cameracapture:9",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"5012/tcp\":[{\"HostPort\":\"5012\"}]},\"Binds\":[\"/dev/video0:/dev/video0\"],\"Devices\":[{\"PathOnHost\":\"/dev/video0\",\"PathInContainer\":\"/dev/video0\",\"CgroupPermissions\":\"mrw\"}]}}"
            }
          },
          "image-classifier-service": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "henkboelman.azurecr.io/simpsons-customvision-arm64",
              "createOptions": "" 
            }
          },
          "alert-module": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "henkboelman.azurecr.io/alertmodule:12",
              "createOptions": "" 
            }
          }          

        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "AlertModuleIoTHub": "FROM /messages/modules/alert-module/outputs/output1 INTO $upstream",
          "CameraCaptureToAlertModule": "FROM /messages/modules/camera-capture/outputs/output1 INTO BrokeredEndpoint(\"/modules/alert-module/inputs/input1\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}