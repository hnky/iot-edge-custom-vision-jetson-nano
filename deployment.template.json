"systemModules": {
    "edgeAgent": {
      "type": "docker",
      "settings": {
        "image": "mcr.microsoft.com/azureiotedge-agent:1.0.8-rc1",
        "createOptions": {}
      }
    },
    "edgeHub": {
      "type": "docker",
      "status": "running",
      "restartPolicy": "always",
      "settings": {
        "image": "mcr.microsoft.com/azureiotedge-hub:1.0.9-rc3",
        "createOptions": {
          "HostConfig": {
            "PortBindings": {
              "5671/tcp": [
                {
                  "HostPort": "5671"
                }
              ],
              "8883/tcp": [
                {
                  "HostPort": "8883"
                }
              ],
              "443/tcp": [
                {
                  "HostPort": "443"
                }
              ]
            }
          }
        }
      }
    }
  },